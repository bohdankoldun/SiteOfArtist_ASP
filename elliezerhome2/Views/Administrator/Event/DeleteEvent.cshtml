@model eliezerhome2.Models.Event

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>Are you sure you want to delete this?</h3>
<hr />

<div class="link-administrator center">
    @Html.ActionLink("Delete", "DeleteEventDo", "Administrator", new { id = Model.EventId }, new { @class = "delete" }) |
    @Html.ActionLink("Back to list", "Events", "Administrator")
</div>
<hr />

<p class="center">
    "@Html.DisplayFor(model => model.Name)"
</p>
<p class="center">
    <img width="50%" src="@("/EventPhotos/" + Model.Photos[0].URL)" alt="Photo" />
</p>




